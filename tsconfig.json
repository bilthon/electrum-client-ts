{
  "compilerOptions": {
    "module": "es2020",
    "esModuleInterop": true,
    "target": "es2020",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2020", "dom"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
